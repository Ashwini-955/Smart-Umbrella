<% layout("/layouts/alwayInclude") %>

<main>
    <section id="updates">   
      <h2>Live Updates</h2>
      <p id="location">Location: <%= weather.name %></p>
      <p id="humidity">Humidity:<%= weather.main.humidity %></p>
      <p id="temperature">Temperature: <%= weather.main.temp %></p>
      <p id="status">Status:<%= weather.weather[0].description %></p>
    </section>
    <section id="controls">
      <h2>Controls</h2>
      <button onclick="refreshData()">Refresh Data</button>
      <button onclick="locateUmbrella()">Find My Umbrella</button>
    </section>
  </main>